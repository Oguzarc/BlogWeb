@model BlogWeb.entity.Blog
@{
    ViewData["Title"] = "AddPost";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12">
                <div class="card">
                    @if (!string.IsNullOrEmpty(ViewBag.IsSucces))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.IsSucces
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-md-flex no-block align-items-center">
                            <div>
                                <h4 class="card-title">Post</h4>
                                <h6 class="card-subtitle">Add Post</h6>
                            </div>
                        </div>
                        <form action="/Home/AddPostEdit" method="post">
                            <div class="form-group mt-4 row">
                                <label for="example-text-input" class="col-md-2 col-form-label">Title</label>
                                <input asp-for="Id" type="hidden"/>
                                <div class="col-md-10">
                                    <input  class="form-control" type="text" asp-for="Title"
                                           id="example-text-input" required>
                                </div>
                            </div>
                            <div class="form-group mt-4 row">
                                <label for="example-text-input" class="col-md-2 col-form-label">Summary</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="text" asp-for="Summary"
                                           id="example-text-input" required>
                                </div>
                            </div>
                            <div class="form-group mt-4 row">
                                <label for="example-text-input" class="col-md-2 col-form-label">Text</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="text" asp-for="Text"
                                           id="example-text-input" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-color-input" class="col-md-2 col-form-label">

                                </label>
                                <div class="col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Edit">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
